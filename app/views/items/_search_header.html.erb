<% if @search %>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-success">
        <div id="search_explanation" class="panel-heading">
          <h5>Search results for <%= @search %></h5>
        </div>
        <div class="panel-body">
          <ul>
             <li>Found <%= pluralize(@items.count, "item") %></li>
         </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
