<!-- Page Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              <%= @item.title %>
          </h1>
          <ol class="breadcrumb">
            <li><%= link_to 'Dashboard', dashboard_path %></li>
            <li class="active"><%= @item.title %></li>
          </ol>
      </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-lg-6">
      <p>
        <%= image_tag attachment_url(@item, :item_image, :fill, 200, 200, fallback: "default.png") %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= @item.title %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @item.description %>
      </p>
      <p>
        <strong>Collection name:</strong>
        <%= @item.collection.name %>
      </p>
    </div>
  </div>
<!-- /.row -->
<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
