<%= form_for(@item, class: "form") do |f| %>
<% if @item.errors.any? %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-danger">
      <div id="error_explanation" class="panel-heading">
        <h5><%= pluralize(@item.errors.count, "error") %> prevented this item from being saved:</h5>
      </div>
      <div class="panel-body">
        <ul>
         <% @item.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
      </div>
    </div>
  </div>
</div>
<% end %>

  <div class="form-group">
    <%= f.label :collection_name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-info" %>
    <%= link_to "Cancel", items_path, class: "btn btn-default" %>
  </div>
<% end %>
