<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h4><%= t('.sign_up', :default => "Sign up") %></h4>
        </div>
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
            <div class="form-group">
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
            </div>
            <div class="form-group">
              <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last Name" %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
            </div>
            <%= f.submit t('.sign_in', :default => "Sign up"), class: "btn btn-lg btn-success btn-block" %>
            <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "btn btn-lg btn-primary btn-block" do %>
            <i class="fa fa-lg fa-facebook-square"></i>
            <%= t('.sign_in_with_provider', provider: "facebook".titleize, :default => "Sign up with Facebook") %>
            <% end %>
            <%- if controller_name != 'sessions' %>
            <span> Already have an account? <%= link_to t(".sign_in", :default => "Sign in"), new_session_path(resource_name) %>
            <% end -%></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
