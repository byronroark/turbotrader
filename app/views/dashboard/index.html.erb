<!-- Page Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              Dashboard <small>Statistics Overview</small>
          </h1>
          <ol class="breadcrumb square">
              <li class="active">Dashboard</li>
          </ol>
      </div>
  </div>
  <!-- /.row -->

  <div class="row">
      <div class="col-lg-12">
          <div class="alert alert-info alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <i class="fa fa-info-circle"></i>  <strong>Alert:</strong> Under construction...
          </div>
      </div>
  </div>
  <div class="row">
      <div class="col-lg-4 col-md-6">
          <div class="panel panel-primary square">
              <div class="panel-heading square">
                  <div class="row">
                      <div class="col-xs-3">
                          <i class="fa fa-tags fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                          <div class="huge">0</div>
                          <div>Items</div>
                      </div>
                  </div>
              </div>
              <%= link_to new_item_path do %>
                  <div class="panel-footer">
                      <span class="pull-left"><i class="fa fa-plus"></i></span>
                      <span class="pull-right panel-link">Add an item</span>
                      <div class="clearfix"></div>
                  </div>
              <% end %>
          </div>
      </div>
      <div class="col-lg-4 col-md-6">
          <div class="panel panel-default square">
              <div class="panel-heading square">
                  <div class="row">
                      <div class="col-xs-3">
                          <i class="fa fa-tasks fa-5x"></i>
                      </div>
                      <div class="col-xs-9 text-right">
                          <div class="huge">0</div>
                          <div>Collections</div>
                      </div>
                  </div>
              </div>
              <a href="#">
                  <div class="panel-footer">
                      <span class="pull-left"><i class="fa fa-plus"></i></span>
                      <span class="pull-right panel-link">Add a collection for your items</span>
                      <div class="clearfix"></div>
                  </div>
              </a>
          </div>
      </div>
  </div>
<!-- /.row -->
